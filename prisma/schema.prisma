generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime ///AUTO PROVIDED BY BETTER AUTH
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime ///AUTO PROVIDED BY BETTER AUTH
  ipAddress String?
  userAgent String?
  userId    String
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user {
  id                  String               @id
  name                String
  email               String               @unique
  emailVerified       Boolean              @default(false)
  image               String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @default(now())
  account             account[]
  session             session[]
  role                Role                 @default(USER)
  postLikes           postLike[]
  postComments        postComment[]
  posts               post[]
  helpRequests        helpRequest[]
  resources           resource[]
  resourceComments    resourceComment[]
  helpRequestComments helpRequestComment[]
}

model verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

/// Comments x Posts x Resources
model post {
  id        String        @id
  hidden    Boolean       @default(false)
  title     String
  body      String
  likes     postLike[]
  ///Big ? on categories, probably better uncategorized
  comments  postComment[]
  author    user          @relation(fields: [authorId], references: [id])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @default(now())
  authorId  String
  resources resource[]
}

model postLike {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  post      post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  userId    String

  @@unique([userId, postId])
}

model postComment {
  id        String   @id
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  post      post     @relation(fields: [postId], references: [id])
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  postId    String
}

model resource {
  id               String            @id
  fileType         FileType
  title            String
  body             String
  approved         Boolean           @default(false)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @default(now())
  author           user              @relation(fields: [authorId], references: [id])
  authorId         String
  resourceComments resourceComment[]
  post             post?             @relation(fields: [postId], references: [id])
  postId           String?
}

model resourceComment {
  id         String   @id
  body       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  resource   resource @relation(fields: [resourceId], references: [id])
  user       user     @relation(fields: [userId], references: [id])
  resourceId String
  userId     String
}

model helpRequest {
  id        String               @id
  fulfilled Boolean              @default(false)
  author    user                 @relation(fields: [authorId], references: [id])
  comments  helpRequestComment[]
  createdAt DateTime             @default(now())
  updatedAt DateTime             @default(now())
  authorId  String
}

model helpRequestComment {
  id            String      @id
  body          String
  user          user        @relation(fields: [userId], references: [id])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now())
  helpRequest   helpRequest @relation(fields: [helpRequestId], references: [id])
  userId        String
  helpRequestId String
}

///Enums
enum Role {
  USER
  EDITOR
  MODERATOR
  ADMIN
  SUPERADMIN
}

enum FileType {
  PDF
  IMAGE
  LINK
}
